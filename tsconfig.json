{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"resolveJsonModule": true,
		"lib": [
			"ESNext",
			"dom"
		],
		"strict": true
	},
	"include": [
		"src/*.ts",
		"src/*/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test"
	]
}